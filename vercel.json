{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "**/*.js",
          "**/*.json",
          "**/*.prisma",
          "prisma/**",
          "dao/**",
          "controller/**",
          "middleware/**",
          "routes/**",
          "services/**",
          "node_modules/.prisma/**"
        ],
        "buildCommand": "npm run vercel-build"
      }
    },
    {
      "src": "api/debug.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/debug",
      "dest": "api/debug.js"
    },
    {
      "src": "/api/images/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DISABLE_FS_OPERATIONS": "true",
    "DATABASE_URL": "postgresql://neondb_owner:npg_5vcpZeany8VN@ep-silent-feather-a19pzoou-pooler.ap-southeast-1.aws.neon.tech/neondb?sslmode=require",
    "BASE_URL": "https://web-homera.vercel.app"
  }
}
